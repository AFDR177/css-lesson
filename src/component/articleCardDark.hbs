{{#with data}}
<div class="art_card" id="{{id}}">
    {{!-- <div class="card_image" style="background-image: url({{img}})"></div> --}}
    <div class="image">
        <img src="{{photo}}" alt="art_img" class="card_image">
        {{#if isNew}} <span class="card_badge">NEW</span> {{/if}}
    </div>
    <h3 class="card_title">
        {{name}}
    </h3>
    <p class="card_text">{{description}}</p>
    <a href="#" class="button card_button">Read All</a>

</div>
{{/with}}